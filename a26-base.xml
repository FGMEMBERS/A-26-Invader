<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <author>BARANGER Emmanuel (3D)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>
   
    <fuel-fraction>0.8</fuel-fraction>
  
    <startup>
      <splash-texture>Aircraft/A-26-Invader/a26-splash.png</splash-texture>
    </startup>

    <model>
      <path>Aircraft/A-26-Invader/Models/a26.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/A-26-Invader/Models/Effects/submodels.xml</path>
    </submodels>

    <sound>
      <path>Aircraft/A-26-Invader/Sounds/a26-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int" n="0">0</int>
        <int type="int" n="1">0</int>
        <int type="int" n="2">0</int>
        <int type="int" n="3">0</int>
        <int type="int" n="4">0</int>
        <int type="int" n="5">0</int>
      </generic>
    </multiplay>

    <flaps>
      <setting>0.00</setting>
      <setting>0.25</setting>
      <setting>0.50</setting>
      <setting>0.75</setting>
      <setting>1.00</setting>
    </flaps>

    <help>
      <title>A 26 Invader</title>
      <key>
        <name>d</name>
        <desc>Open/Close crew door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close passanger door</desc>
      </key>
      <key>
        <name>e</name>
        <desc>Guns fire</desc>
      </key>
    </help>

    <menubar include="Dialogs/a26-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/a26-keyboard.xml"/>
  </input>
 
  <nasal>
    <a26>
      <file>Aircraft/A-26-Invader/Nasal/doors.nas</file>
      <file>Aircraft/A-26-Invader/Nasal/liveries.nas</file>
      <file>Aircraft/A-26-Invader/Nasal/light.nas</file>
    </a26>
    <guns>
      <file>Aircraft/A-26-Invader/Nasal/weapons.nas</file>
      <file>Aircraft/A-26-Invader/Nasal/revi.nas</file>
    </guns>
  </nasal>

</PropertyList>

