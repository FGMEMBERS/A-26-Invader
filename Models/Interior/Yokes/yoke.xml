<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>yoke.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>Column</object-name>
    <object-name>Yoke</object-name>
    <object-name>Yoke.Button</object-name>
    <object-name>Yoke.Button.Base</object-name>

    <!-- Objets transparents -->
  </animation>

  <!-- Let's animate Yokes (JC_SV) -->
  <animation>
    <type>rotate</type>
    <object-name>Yoke</object-name>
    <object-name>Yoke.Button</object-name>
    <object-name>Yoke.Button.Base</object-name>
    <object-name>Column</object-name>
    <property>controls/flight/elevator</property>
    <factor> 10 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Yoke</object-name>
    <object-name>Yoke.Button</object-name>
    <object-name>Yoke.Button.Base</object-name>
    <property>controls/flight/aileron</property>
    <factor> 40 </factor>
    <center>
      <x-m> 0.059 </x-m>
      <y-m> 0.002 </y-m>
      <z-m> 0.461 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

