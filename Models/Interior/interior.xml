<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttourvitres</object-name>
    <object-name>inttourporteG</object-name>
    <object-name>inttourporteD</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/A-26-Invader/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -4.371 </x-m>
      <y-m> -0.405 </y-m>
      <z-m> -0.315 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Mitrailleur -->
  <model>
    <path>Aircraft/A-26-Invader/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m>  0.832 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.315 </z-m>
      <roll-deg>      0 </roll-deg>
      <pitch-deg>     0 </pitch-deg>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/A-26-Invader/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -4.703 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.349 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Portière gauche -->
  <animation>
    <name>IntPortiereGauche</name>
    <object-name>inttourporteG</object-name>
    <object-name>intvitreporteG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPortiereGauche</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> 50 </factor>
    <center>
      <x-m> -4.193 </x-m>
      <y-m> -0.741 </y-m>
      <z-m> -0.247 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>IntPortiereDroite</name>
    <object-name>inttourporteD</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPortiereDroite</object-name>
    <property>/instrumentation/doors/passenger/position-norm</property>
    <factor> -50 </factor>
    <center>
      <x-m> -4.193 </x-m>
      <y-m>  0.741 </y-m>
      <z-m> -0.247 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

