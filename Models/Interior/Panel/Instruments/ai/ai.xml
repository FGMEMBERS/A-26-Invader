<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList> 

  <path>ai.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>
    <object-name>cadran</object-name>
    <object-name>face</object-name>
    <object-name>visses</object-name>
    <object-name>contour</object-name>
    <object-name>interrupteur</object-name>
    <object-name>intocage</object-name>
    <object-name>ai</object-name>
    <object-name>face_emit</object-name>
	
    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>
<!--
  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt</property></not>
    </condition>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt</property></not>
    </condition>
  </animation>
-->

  <animation> 
    <type>material</type>
    <object-name>face</object-name>
    <object-name>cadran</object-name>
    <object-name>ai</object-name>
    <condition>
      <and>
        <not><property>sim/rendering/rembrandt</property></not>
        <property>systems/electrical/outputs/instrument-lights</property>
      </and>
    </condition>
    <emission>
      <red>   0.2000 </red>
      <green> 0.2500 </green>
      <blue>  0.7035 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>vitre</object-name>
    <condition>
      <not-equals>
        <property>/environment/atmosphere/altitude-half-to-sun</property>
        <value>0</value>
      </not-equals>
    </condition>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>face_emit</object-name>
    <object-name>face</object-name>
    <object-name>cadran</object-name>
    <object-name>ai</object-name>
    <condition>
      <and>
        <not-equals>
          <property>/environment/atmosphere/altitude-half-to-sun</property>
          <value>0</value>
        </not-equals>
        <equals>
          <property>sim/rendering/rembrandt</property>
          <value>true</value>
        </equals>
      </and>
    </condition>
  </effect>

  <animation>
    <type>select</type>
    <object-name>face_emit</object-name>
    <condition>
      <and>
        <equals>
          <property>/environment/atmosphere/altitude-half-to-sun</property>
          <value>0</value>
        </equals>
        <equals>
          <property>sim/rendering/rembrandt</property>
          <value>true</value>
        </equals>
      </and>
    </condition>
  </animation> 

  <animation>
    <type>material</type>
    <object-name>face_emit</object-name>
    <object-name>face</object-name>
    <object-name>cadran</object-name>
    <object-name>ai</object-name>
    <condition>
      <and>
        <equals>
          <property>/environment/atmosphere/altitude-half-to-sun</property>
          <value>0</value>
        </equals>
        <equals>
          <property>/sim/model/lights/FluorLamp[0]</property>
          <value>true</value>
        </equals>
        <equals>
          <property>/sim/model/lights/FluorLamp[1]</property>
          <value>true</value>
        </equals>
      </and>
    </condition>
    <emission>
      <red>0.2</red>
      <green>0.25</green>
      <blue>0.7035</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face_emit</object-name>
    <object-name>face</object-name>
    <object-name>cadran</object-name>
    <object-name>ai</object-name>
    <condition>
      <equals>
        <property>/environment/atmosphere/altitude-half-to-sun</property>
        <value>0</value>
      </equals>
      <or>
        <equals>
          <property>/sim/model/lights/FluorLamp[0]</property>
          <value>true</value>
        </equals>
        <equals>
          <property>/sim/model/lights/FluorLamp[1]</property>
          <value>true</value>
        </equals>
      </or>
    </condition>
    <emission>
      <red>   0.1000 </red>
      <green> 0.1250 </green>
      <blue>  0.3417 </blue>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>ai</object-name>
    <property>instrumentation/attitude-indicator/indicated-roll-deg</property>
    <center>
      <x-m>  0.000 </x-m>
      <y-m> -0.026 </y-m>
      <z-m>  0.000 </z-m>
    </center>
    <axis> 
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

