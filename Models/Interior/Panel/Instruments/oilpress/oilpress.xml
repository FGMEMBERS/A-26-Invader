<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>oil_pressure.ac</path>

  <animation>
    <!-- Objects Opaques -->
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>OilPres.Face</object-name>
    <object-name>OilPres.Needle1</object-name>
    <object-name>OilPres.Needle2</object-name>
    <object-name>face_emit</object-name>

    <!-- Objects Transparents -->
    <object-name>vitre</object-name>
  </animation>
<!--
  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt</property></not>
    </condition>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt</property></not>
    </condition>
  </animation>
-->
  <animation>
    <type>material</type>
    <object-name>OilPres.Face</object-name>
    <object-name>OilPres.Needle1</object-name>
    <object-name>OilPres.Needle2</object-name>
    <condition>
      <and>
        <not><property>sim/rendering/rembrandt</property></not>
        <property>systems/electrical/outputs/instrument-lights</property>
      </and>
    </condition>
    <emission>
	   <red>0.2</red>
	   <green>0.25</green>
	   <blue>0.7035</blue>
    </emission>
  </animation>
 
  <animation>
    <type>select</type>
    <object-name>vitre</object-name>
    <condition>
             <not-equals>
		<property>/environment/atmosphere/altitude-half-to-sun</property>
                <value>0</value>
             </not-equals>
   </condition>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>face_emit</object-name>
    <object-name>vitre</object-name>
    <object-name>OilPres.Needle1</object-name>
    <object-name>OilPres.Needle2</object-name>
  </effect>

    <animation>
    <type>select</type>
    <object-name>face_emit</object-name>
	<condition>
	   <and>
             <equals>
		<property>/environment/atmosphere/altitude-half-to-sun</property>
                <value>0</value>
             </equals>
             <equals>
                <property>sim/rendering/rembrandt</property>
                <value>true</value>
             </equals>
	   </and>
	</condition>
    </animation> 

    <animation>
    <type>material</type>
    <object-name>OilPres.Face</object-name>
    <object-name>face_emit</object-name>
    <object-name>OilPres.Needle1</object-name>
    <object-name>OilPres.Needle2</object-name>
       <condition>
	   <and>
             <equals>
		<property>/environment/atmosphere/altitude-half-to-sun</property>
                <value>0</value>
             </equals>
	      <equals>
	        <property>/sim/model/lights/FluorLamp[0]</property>
	        <value>true</value>
	      </equals>
	      <equals>
	        <property>/sim/model/lights/FluorLamp[1]</property>
	        <value>true</value>
	      </equals>
	   </and>
       </condition>
       <emission>
	   <red>0.2</red>
	   <green>0.25</green>
	   <blue>0.7035</blue>
       </emission>
   </animation>

   <animation>
    <type>material</type>
    <object-name>OilPres.Face</object-name>
    <object-name>face_emit</object-name>
    <object-name>OilPres.Needle1</object-name>
    <object-name>OilPres.Needle2</object-name>
       <condition>
             <equals>
		<property>/environment/atmosphere/altitude-half-to-sun</property>
                <value>0</value>
             </equals>
	   <or>
	      <equals>
	        <property>/sim/model/lights/FluorLamp[0]</property>
	        <value>true</value>
	      </equals>
	      <equals>
	        <property>/sim/model/lights/FluorLamp[1]</property>
	        <value>true</value>
	      </equals>
	   </or>
       </condition>
       <emission>
		 <red>0.10</red>
		 <green>0.125</green>
		 <blue>0.3417</blue>
       </emission>
   </animation>

  <animation>
    <type>rotate</type>
    <object-name>OilPres.Needle1</object-name>
    <property>/engines/engine[0]/est-oilpress</property>
    <interpolation>
      <entry><ind>  0 </ind><dep>   0 </dep></entry>
      <entry><ind> 35 </ind><dep> 315 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>OilPres.Needle2</object-name>
    <property>/engines/engine[1]/est-oilpress</property>
    <interpolation>
      <entry><ind>  0 </ind><dep>   0 </dep></entry>
      <entry><ind> 35 </ind><dep> 315 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

