<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>flapgear.ac</path>

 <animation>
   <!-- Objets opaques -->
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>face</object-name>
    <object-name>Cgear.needle</object-name>
    <object-name>Rgear.needle</object-name>
    <object-name>Lgear.needle</object-name>
    <object-name>Flap.needle</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>Cgear.needle</object-name>
    <object-name>Rgear.needle</object-name>
    <object-name>Lgear.needle</object-name>
    <object-name>Flap.needle</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Flap.needle</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> 90 </factor>
    <center>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.023 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Lgear.needle</object-name>
    <property>gear/gear[0]/position-norm</property>
    <factor> 90 </factor>
    <center>
      <x-m>  0.005 </x-m>
      <y-m> -0.019 </y-m>
      <z-m>  0.000 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Rgear.needle</object-name>
    <property>gear/gear[1]/position-norm</property>
    <factor> 90 </factor>
    <center>
      <x-m> 0.005 </x-m>
      <y-m> 0.019 </y-m>
      <z-m> 0.000 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Cgear.needle</object-name>
    <property>gear/gear[2]/position-norm</property>
    <factor> 90 </factor>
    <center>
      <x-m>  0.005 </x-m>
      <y-m>  0.001 </y-m>
      <z-m> -0.019 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

