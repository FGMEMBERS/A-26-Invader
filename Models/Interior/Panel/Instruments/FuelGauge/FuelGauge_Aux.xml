<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>FuelGauge_Aux.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>
    <object-name>ptrBombBay</object-name>
    <object-name>face_emit</object-name>

    <object-name>vitre</object-name>
  </animation>
<!--
  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt/enabled</property></not>
    </condition>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt/enabled</property></not>
    </condition>
  </animation>
-->
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>
    <condition>
      <and>
        <not><property>sim/rendering/rembrandt/enabled</property></not>
        <property>systems/electrical/outputs/instrument-lights</property>
      </and>
    </condition>
    <emission>
	   <red>0.2</red>
	   <green>0.25</green>
	   <blue>0.7035</blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>vitre</object-name>
    <condition>
             <not-equals>
		<property>/environment/atmosphere/altitude-half-to-sun</property>
                <value>0</value>
             </not-equals>
   </condition>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>face_emit</object-name>
    <object-name>vitre</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>
<!--
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
-->
  </effect>
 
    <animation>
    <type>select</type>
    <object-name>face_emit</object-name>
	<condition>
	   <and>
             <equals>
		<property>/environment/atmosphere/altitude-half-to-sun</property>
                <value>0</value>
             </equals>
             <equals>
                <property>sim/rendering/rembrandt/enabled</property>
                <value>true</value>
             </equals>
	   </and>
	</condition>
    </animation> 

    <animation>
    <type>material</type>
    <object-name>face_emit</object-name>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>
       <condition>
	   <and>
             <equals>
		<property>/environment/atmosphere/altitude-half-to-sun</property>
                <value>0</value>
             </equals>
	      <equals>
	        <property>/sim/model/lights/FluorLamp[0]</property>
	        <value>true</value>
	      </equals>
	      <equals>
	        <property>/sim/model/lights/FluorLamp[1]</property>
	        <value>true</value>
	      </equals>
	   </and>
       </condition>
       <emission>
	   <red>0.2</red>
	   <green>0.25</green>
	   <blue>0.7035</blue>
       </emission>
   </animation>

   <animation>
    <type>material</type>
    <object-name>face_emit</object-name>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>
       <condition>
             <equals>
		<property>/environment/atmosphere/altitude-half-to-sun</property>
                <value>0</value>
             </equals>
	   <or>
	      <equals>
	        <property>/sim/model/lights/FluorLamp[0]</property>
	        <value>true</value>
	      </equals>
	      <equals>
	        <property>/sim/model/lights/FluorLamp[1]</property>
	        <value>true</value>
	      </equals>
	   </or>
       </condition>
       <emission>
		 <red>0.10</red>
		 <green>0.125</green>
		 <blue>0.3417</blue>
       </emission>
   </animation>

  <animation> 
    <type>rotate</type>
    <object-name>ptrL</object-name>
    <property>consumables/fuel/tank[2]/level-gal_us</property>
    <factor>10</factor>
    <interpolation>
     <entry><ind>   0.00 </ind><dep>  0.0 </dep></entry>
     <entry><ind>  50.00 </ind><dep> 14.0 </dep></entry>
     <entry><ind>  98.66 </ind><dep> 28.0 </dep></entry>
     <entry><ind> 177.33 </ind><dep> 59.5 </dep></entry>
     <entry><ind> 300.00 </ind><dep> 85.0 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.004151 </x-m>
      <y-m> -0.033880 </y-m>
      <z-m>  0.004920 </z-m>  
    </center>
    <axis> 
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>         
 
  <animation> 
    <type>rotate</type>
    <object-name>ptrR</object-name>
    <property>consumables/fuel/tank[3]/level-gal_us</property>
    <interpolation>
     <entry><ind>   0.00 </ind><dep>  0.0 </dep></entry>
     <entry><ind>  50.00 </ind><dep> 14.0 </dep></entry>
     <entry><ind>  98.66 </ind><dep> 28.0 </dep></entry>
     <entry><ind> 177.33 </ind><dep> 59.5 </dep></entry>
     <entry><ind> 300.00 </ind><dep> 85.0 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.003891 </x-m>
      <y-m> 0.033070 </y-m>
      <z-m> 0.003870 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>         
  
  <animation> 
    <type>rotate</type>
    <object-name>ptrBombBay</object-name>
    <property>consumables/fuel/tank[4]/level-gal_us</property>
    <interpolation>
     <entry><ind>   0.00 </ind><dep>  0.0 </dep></entry>
     <entry><ind>  50.00 </ind><dep> 14.0 </dep></entry>
     <entry><ind>  98.66 </ind><dep> 28.0 </dep></entry>
     <entry><ind> 177.33 </ind><dep> 59.5 </dep></entry>
     <entry><ind> 300.00 </ind><dep> 85.0 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.003891 </x-m>
      <y-m> 0.033070 </y-m>
      <z-m> 0.003870 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>         
 
</PropertyList>

